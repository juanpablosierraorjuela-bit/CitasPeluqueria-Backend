<script>
    function abrirVenta(id, nombre) {
        document.getElementById('venta_producto_id').value = id;
        document.getElementById('venta_producto_nombre').innerText = nombre;
        new bootstrap.Modal(document.getElementById('modalVenta')).show();
    }
</script>
